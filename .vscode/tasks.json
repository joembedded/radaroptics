{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Manual (vollständig)",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build-manual.ps1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Manual (ohne Übersetzung)",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build-manual.ps1",
                "-SkipTranslation"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Watch Manual (automatisch bei Änderungen)",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-Command",
                "$watcher = New-Object System.IO.FileSystemWatcher; $watcher.Path = '${workspaceFolder}'; $watcher.Filter = 'manual_de.md'; $watcher.EnableRaisingEvents = $true; Write-Host 'Watching manual_de.md for changes...' -ForegroundColor Cyan; Register-ObjectEvent $watcher 'Changed' -Action { Write-Host '`nDatei geändert - starte Build...' -ForegroundColor Yellow; & '${workspaceFolder}/build-manual.ps1' -SkipTranslation }; while($true) { Start-Sleep 1 }"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
